<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".activity.SignUpActivity">

    <ImageView
        android:id="@+id/ivSplash"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_below="@+id/tvSkip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        app:srcCompat="@drawable/logo_round" />

    <android.support.v7.widget.CardView
        android:id="@+id/cvEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivSplash"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="18dp"
        android:alpha="0.7"
        android:elevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/BlackColor"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="User Name"
                android:textColor="@color/WhiteColor"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:backgroundTint="@color/WhiteColor"
                android:hint="Enter Email address or mobile no."
                android:inputType="textEmailAddress"
                android:textColor="@color/WhiteColor"
                android:textColorHint="@color/WhiteColor" />

                <TextView
                    android:id="@+id/tvPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Password"
                    android:textColor="@color/WhiteColor"
                    android:textSize="18sp" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:backgroundTint="@color/WhiteColor"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:textColor="@color/WhiteColor"
                android:textColorHint="@color/WhiteColor" />
            <TextView
                android:id="@+id/tvCPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Confirm Password"
                android:textColor="@color/WhiteColor"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etCPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:backgroundTint="@color/WhiteColor"
                android:hint="Enter Confirm Password"
                android:inputType="textPassword"
                android:textColor="@color/WhiteColor"
                android:textColorHint="@color/WhiteColor" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cvEditText"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/round_signup_button"
        android:text="SIGN UP"
        android:textColor="@color/WhiteColor" />
    <TextView
        android:id="@+id/tvReturnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Return to Login"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_below="@id/btnSignUp"
        android:textColor="@color/colorAccent"
        />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="28dp"
        android:checked="true"
        android:text="I would like to receive promotional emails from Mello"
        android:textColor="@color/WhiteColor" />
</RelativeLayout>